<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:background="@drawable/background_shape"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="24dp"
        android:textSize="16sp"
        android:textAllCaps="false"
        tools:text="Congrats!! you wonbyou actually did it  "
        android:gravity="center"
        android:maxLines="2"
        android:textColor="@color/black"
        android:background="@drawable/text_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_points"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginHorizontal="8dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:elevation="8dp"
        android:textColor="@color/white"
        android:textSize="@dimen/text_big_size"
        app:layout_constraintEnd_toEndOf="@+id/text_result"
        app:layout_constraintStart_toStartOf="@+id/text_result"
        app:layout_constraintTop_toBottomOf="@+id/text_result" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_song"
        android:layout_width="0dp"
        android:layout_marginHorizontal="64dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/dark_purple"
        android:text="@string/wanna_hear_a_song"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_reset_game" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_reset_game"
        android:layout_width="0dp"
        android:layout_marginHorizontal="64dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_background"
        android:backgroundTint="@color/dark_purple"
        android:text="resetart"
        android:textColor="@color/white"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/image_coffee"
        app:layout_constraintVertical_bias="0.068" />

    <ImageView
        android:id="@+id/image_coffee"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/ic_starbucks_coffee"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_points"
        tools:ignore="ContentDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>